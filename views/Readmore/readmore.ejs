<script>
    let selectedRoomID;

    // Function to update room ID and price
    function updateRoomIDAndPrice() {
        const roomTypeSelect = document.getElementById('roomType');
        selectedRoomID = roomTypeSelect.value;
        const selectedPrice = roomTypeSelect.options[roomTypeSelect.selectedIndex].getAttribute('data-price');
        document.getElementById('roomPrice').innerText = selectedPrice;
    }

    // Book Button function to redirect with selected room ID
    function bookButton() {
        if (selectedRoomID) {
            console.log(selectedRoomID);
            const queryString = `roomID=${selectedRoomID}`;
            window.location.href = `/booking?${queryString}`;
        } else {
            alert('Please select a room type.');
        }
    }

    // Initialize the room ID and price with the first option's value
    document.addEventListener('DOMContentLoaded', () => {
        updateRoomIDAndPrice();
    });
</script>
</body>
</html>
