<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>FMPG</title>
    <link rel="stylesheet" href="/stylesheets/style.css">
</head>
<body>
    <div class="page-content page-container" id="page-content">
        <div class="padding">
            <div class="row container d-flex justify-content-center">
                <div class="col-xl-6 col-md-12">
                    <div class="card user-card-full">
                        <div class="row m-l-0 m-r-0">
                            <div class="col-sm-4 bg-c-lite-green user-profile">
                                <center>
                                    <div class="card-block text-center text-white">
                                        <div class="m-b-25">
                                            <img src="https://img.icons8.com/bubbles/100/000000/user.png" class="img-radius" alt="User-Profile-Image">
                                        </div>
                                        <h2 class="f-w-600">Welcome, <%= user.username %>!</h2>
                                        <p><%= user._id %></p>
                                    </div>
                                </center>
                            </div>
                            <div class="col-sm-8">
                                <div class="card-block">
                                    <div class="home">
                                        <ul>
                                            <li style="display: block; background-color: rgb(114, 204, 114); width: 80px;">
                                                <center><a href="/index" style="color: white;">Home</a></center>
                                            </li>
                                        </ul>
                                    </div>

                                    <h6 class="m-b-20 p-b-5 b-b-default f-w-600">Information</h6>
                                    <div class="row">
                                        <div class="col-sm-6">
                                            <p class="m-b-10 f-w-600">Email</p>
                                            <h6 class="text-muted f-w-400"><%= user.email %></h6>
                                        </div>
                                        <div class="col-sm-6">
                                            <p class="m-b-10 f-w-600">Phone</p>
                                            <h6 class="text-muted f-w-400"><%= user.mobile %></h6>
                                        </div>
                                    </div>

                                    <h6 class="m-b-20 m-t-40 p-b-5 b-b-default f-w-600">Booking</h6>
                                    <div class="row">
                                        <% if (bookings && bookings.length) { %>
                                          <ol>
                                            <% bookings.forEach(function(booking) { %>
                                              <li class="booking-details">
                                                <p><strong>Booking ID:</strong> <%= booking._id %></p>
                                                <% if (booking.roomType) { %>
                                                  <% if (booking.roomType.property) { %>
                                                    <p><strong>Property Name:</strong> <%= booking.roomType.property.name %></p>
                                                  <% } %>
                                                  <p><strong>Room Type:</strong> <%= booking.roomType.type %></p>
                                                <% } else { %>
                                                  <p><strong>Room Type:</strong> Not specified</p>
                                                <% } %>
                                                <p><strong>Start Date:</strong> <%= booking.startDate.toDateString() %></p>
                                                <p><strong>End Date:</strong> <%= booking.endDate.toDateString() %></p>
                                                <p><strong>Special Request:</strong> <%= booking.specialRequest || 'None' %></p>
                                              </li>
                                            <% }) %>
                                          </ol>
                                        <% } else { %>
                                          <div>No Bookings Available</div>
                                        <% } %>
                                      </div>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="logout">
                <ul>
                    <center>
                        <li style="display: block; background-color: red;"><a href="/logout" style="color: white;">Logout</a></li>
                    </center>
                </ul>
            </div>
        </div>
    </div>
</body>
</html>
